<resources>
    <style name="NormalTheme" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tuna.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/base_light_darker</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>
</resources>